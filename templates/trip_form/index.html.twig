{% extends 'base.html.twig' %}

{% block title %}Remington - Każda Sytuacja - Formularz{% endblock %}

{% block body %}
    <section class="form" id="flashlight">
        <div class="wrap">
            <h2>WYGRAJ WYJAZD</h2>

            <div class="row">
                <p><strong>Przygotuj się na każdą sytuację.</strong> <br />Zaloguj się przez facebooka, wypełnij formularz i odpowiedz na pytanie konkursowe. <br />Przed Tobą szansa wygrania <strong>wyjazdu na 3-dniowy Survival Camp z byłymi GROM-owcami!</strong> <br /><strong>Gratis – niezniszczalna latarka VARTA.</strong></p>
            </div>

            <div class="row">
                <a href="{$href}" title="Zaloguj się przez Facebook"><img src="{{ asset('/images/2350.png') }}" class="fb-login" /></a>
            </div>

            {{ form_start(form) }}
                <div class="row">
                    <div class="column">
                        <div class="element">
                            <p>IMIĘ:</p>
                            <p>{{ form_widget(form.firstname) }}</p>
                            <p class="error-post"></p>
                        </div>

                        <div class="element">
                            <p>E-MAIL:</p>
                            <p>{{ form_widget(form.email) }}</p>
                            <p class="error-post"></p>
                        </div>

                        <div class="element">
                            <p>ULICA I NR:</p>
                            <p>{{ form_widget(form.street) }}</p>
                            <p class="error-post"></p>
                        </div>

                        <div class="element">
                            <p>MIASTO:</p>
                            <p>{{ form_widget(form.city) }}</p>
                            <p class="error-post"></p>
                        </div>

                        <div class="element">
                            <p>KOD POCZTOWY:</p>
                            <p>{{ form_widget(form.code) }}</p>
                            <p class="error-post"></p>
                        </div>
                    </div>
                    <div class="column">
                        <div class="element">
                            <p>NAZWISKO:</p>
                            <p>{{ form_widget(form.lastname) }}</p>
                            <p class="error-post"></p>
                        </div>

                        <div class="element">
                            <p>DATA URODZENIA:</p>
                            <p>{{ form_widget(form.birth, {'attr': {'class': 'datapicker',
                                    'data-beatpicker': true,
                                    'data-beatpicker-id': 'myDatePicker',
                                    'data-beatpicker-format': "['DD','MM','YYYY'],separator:'-'",
                                    'data-beatpicker-extra': 'customOptions'}}) }}
                            </p>
                            <p class="error-post"></p>
                        </div>

                        <div class="element">
                            <p>PŁEĆ:</p>
                            <p>{{ form_widget(form.sex) }}</p>
                            <p class="error-post"></p>
                        </div>

                        <div class="element">
                            <p>NR PARAGONU:</p>
                            <p>{{ form_widget(form.paragon) }}</p>
                            <p class="error-post"></p>
                        </div>

                        <div class="element">
                            <p>POTWIERDŹ NR PARAGONU:</p>
                            <p>{{ form_widget(form._paragon) }}</p>
                            <p class="error-post"></p>
                        </div>
                    </div>
                </div>

                <div class="clear"></div>

                <div class="row">
                    <div class="column">
                        <div class="element">
                            <p><strong>W jakich warunkach chciałbyś wypróbować produkty REMINGTON?”</strong></p>
                            <p>{{ form_widget(form.try) }}</p>
                            <p class="error-post"></p>
                        </div>
                    </div>
                    <div class="column">
                        <div class="element">
                            <p style="margin-top: 21px;">SKLEP:</p>
                            <p>{{ form_widget(form.shop) }}</p>
                            <p class="error-post"></p>
                        </div>

                        <div class="element">
                            <p>KATEGORIA:</p>
                            <p>{{ form_widget(form.category) }}</p>
                            <p class="error-post"></p>
                        </div>
                    </div>
                </div>

                <div class="clear"></div>

                <div class="row">
                    <div class="column">
                        <div class="element">
                            <p>SKĄD WIESZ O AKCJI?:</p>
                            <p>{{ form_widget(form.where) }}</p>
                            <p class="error-post"></p>
                        </div>
                    </div>
                    <div class="column">
                        <div class="element">
                            <p>PRODUKT:</p>
                            <p>{{ form_widget(form.product) }}</p>
                        </div>
                    </div>
                </div>

                <div class="clear"></div>

                <div class="row">
                    {{ form_row(form.legal_a, {'attr': {'hidden': 'hidden'}}) }}
                    <p class="error-post"></p>
                    {{ form_row(form.legal_b, {'attr': {'hidden': 'hidden'}}) }}
                    <p class="error-post"></p>
                    {{ form_row(form.legal_c, {'attr': {'hidden': 'hidden'}}) }}
                    <p class="error-post"></p>
                </div>

                <div class="row">
                    {{ form_widget(form._token) }}
                    <input type="submit" name="submit" />
                </div>

                <div class="clear"></div>
            {{ form_end(form) }}

            <br /><br /><br /><br />
            <div class="clear"></div>
        </div>
    </section>
{% endblock %}
